{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    { 
      "src": "public/", 
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/server.js"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/routes/" 
    }
  ]
}
